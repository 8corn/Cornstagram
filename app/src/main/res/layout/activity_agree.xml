<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.AgreeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="76dp"
            android:textSize="26sp"
            android:text="약관 동의"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textSize="12sp"
            android:textColor="@color/Gray"
            android:text="Cornstagram은 회원님의 개인 정보를 안전하게 보호합니다. 새\n계정을 만들려면 모든 약관에 동의하세요."
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linegray"
            android:layout_marginTop="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:text="모두 동의" />

            <ImageView
                android:id="@+id/agree_all_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbtn_circle"
                android:layout_marginTop="19dp"
                android:layout_marginStart="319dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linegray"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp"
                    android:text="이용 약관(필수)" />

                <TextView
                    android:id="@+id/agree_use_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/bluesky"
                    android:text="더 알아보기" />

            </LinearLayout>

            <ImageView
                android:id="@+id/agree_use_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbtn_circle"
                android:layout_marginTop="19dp"
                android:layout_marginStart="278.5dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="데이터 정책(필수)" />

                <TextView
                    android:id="@+id/agree_data_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/bluesky"
                    android:text="더 알아보기" />

            </LinearLayout>

            <ImageView
                android:id="@+id/agree_data_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbtn_circle"
                android:layout_marginTop="19dp"
                android:layout_marginStart="263.5dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="위치 기반 기능(필수)" />

                <TextView
                    android:id="@+id/agree_gps_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="11sp"
                    android:textColor="@color/bluesky"
                    android:text="더 알아보기" />

            </LinearLayout>

            <ImageView
                android:id="@+id/agree_gps_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbtn_circle"
                android:layout_marginTop="19dp"
                android:layout_marginStart="245dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <Button
            android:id="@+id/agree_next_btn"
            android:layout_width="335dp"
            android:layout_height="48dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/skybtn2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="계속"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>