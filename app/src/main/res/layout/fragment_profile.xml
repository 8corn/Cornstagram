<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="875dp"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/profile_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="아이디"  />

            <ImageView
                android:id="@+id/profile_plus_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="232dp"
                android:src="@drawable/nav_plus" />

            <ImageView
                android:id="@+id/profile_setting"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="28dp"
                android:src="@drawable/threeline" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="129dp"
                android:layout_height="129dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="58dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="post" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="follower" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="following" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_aka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginStart="28dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="사용자 이름" />

            <Button
                android:id="@+id/profile_profile_follow_btn"
                android:layout_width="210dp"
                android:layout_height="38dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_profile_editbtn"
                android:text="follow"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/profile_profile_edit_btn"
            android:layout_width="401dp"
            android:layout_height="38dp"
            android:layout_marginTop="13dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile_profile_editbtn"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="프로필 편집" />

        <LinearLayout
            android:id="@+id/profile_peedtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/profile_peed_btn"
                android:layout_marginStart="92dp"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/peed_on" />

            <ImageView
                android:id="@+id/profile_peed_tagbtn"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="185dp"
                android:src="@drawable/peed_tag" />
            
        </LinearLayout>

        <FrameLayout
            android:id="@+id/profile_fragment"
            android:layout_width="match_parent"
            android:layout_height="477dp">

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>