<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/detail_viewitem_profile_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="7.5dp"
            android:src="@drawable/gilmon" />

        <TextView
            android:id="@+id/detail_viewitem_profile_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/detail_viewitem_profile_content"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_viewitem_favorite_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/agumon" />

        <ImageView
            android:id="@+id/detail_viewitem_comment_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/impmon" />

    </LinearLayout>

    <TextView
        android:id="@+id/detail_viewitem_favorite_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like 0"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/detail_viewitem_explain_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Explain content" />

</LinearLayout>