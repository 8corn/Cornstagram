<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="48dp"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:text="로그인" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cornstagramlogo"
            android:layout_marginTop="99dp"
            android:layout_marginStart="102dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="73.87dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/text_tool">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_login"
                android:layout_width="335dp"
                android:layout_height="48dp"
                android:paddingStart="9dp"
                android:background="@color/stream_ui_literal_transparent"
                android:hint="휴대폰 번호 또는 이메일 주소" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/text_tool">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pwd_login"
                android:layout_width="335dp"
                android:layout_height="48dp"
                android:paddingStart="9dp"
                android:background="@color/stream_ui_literal_transparent"
                android:hint="비밀번호" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="326dp"
            android:layout_height="61dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/skybtn"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="로그인" />

        <ImageView
            android:layout_width="373dp"
            android:layout_height="1dp"
            android:src="@drawable/line"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="또는"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/login_naver_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/naverlogin"
                android:layout_marginStart="90dp" />

            <ImageView
                android:id="@+id/login_kakao_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/kakaologin"
                android:layout_marginStart="20dp" />

            <ImageView
                android:id="@+id/login_apple_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/applelogin"
                android:layout_marginStart="20dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>